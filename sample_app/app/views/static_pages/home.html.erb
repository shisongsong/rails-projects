<% provide(:title,'home') %>

<% if signed_in? %>
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
      <%= render 'shared/micropost_form' %>
    </section>
  </aside>

  <div class="span8">
    <h3>关注</h3>
    <%= render 'shared/feed'%>
  </div>


<% else %>
  <p>
    This is the home page for the
    <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
    sample application.
  </p>

  <div class="center hero-unit">
    <% if !signed_in? %>
      <%= link_to "现在注册",signup_path, class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
  <%= link_to image_tag("head.jpg", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>
