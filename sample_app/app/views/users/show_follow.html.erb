<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
      <%= render 'users/follow_form' %>
    </section>
    <section>
      <%= render 'shared/stats' %> <% if @users.any? %>
        <div class="user_avatars"> <% @users.each do |user| %>
            <%= link_to gravatar_for(user), user %> <% end %>
        </div>
      <% end %> </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3> <% if @users.any? %> <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate :next_label => "下一页", :previous_label => "上一页", :inner_window => 3 %>
    <% end %>
  </div>
</div>
