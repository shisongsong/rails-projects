<h1>修改资料</h1>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <a href="http://gravatar.com/emails" target="_blank">修改头像</a>
      </h1>
    </section>
  </aside>

  <div class="span6 offset3">
    <%= form_for (@user) do |f| %> 
      <%= render 'fields',f: f %>
      <%= f.submit "修改",class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

